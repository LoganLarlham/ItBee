# Cache Control Headers for Cloudflare Pages

# Prevent CDN caching of words.json to ensure fresh dictionary on every deployment
/words.json
  Cache-Control: no-cache, must-revalidate, max-age=0

# Allow caching of static assets (CSS, JS, images)
/*.css
  Cache-Control: public, max-age=31536000, immutable
/*.js
  Cache-Control: public, max-age=31536000, immutable
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
